---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/default.astro";
import { css } from "styled-system/css";
import { button } from "styled-system/recipes/button";
import { projects } from "~/data/projects";
import ProjectCard from "~/components/project-card.astro";
import { link } from "styled-system/recipes";
---

<Layout>
  <main class={css({ display: "flex", flexDirection: "column" })}>
    <section
      id="hero"
      class={css({
        width: "full",
        py: { base: 12, md: 24, lg: 32, xl: 48 },
      })}
    >
      <div class={css({ px: { base: 4, md: 6 } })}>
        <div
          class={css({
            display: "flex",
            flexDir: "column",
            alignItems: "center",
            spaceY: 4,
            textAlign: "center",
          })}
        >
          <div class={css({ spaceY: 2 })}>
            <h1
              class={css({
                textAlign: "center",
                fontSize: "4xl",
                lineHeight: "3rem",
                fontWeight: "bold",
                dropShadow: "sm",
                md: {
                  fontSize: "7xl",
                  lineHeight: "5rem",
                },
              })}
            >
              {"Hi, I'm "}
              <span
                class={css({
                  display: "inline-block",
                  color: "transparent",
                  bgClip: "text",
                  bgGradient: "to-b",
                  gradientFrom: "yellow.400",
                  gradientVia: "pink.600",
                  gradientTo: "violet.700",
                })}
              >
                Curetix
              </span>
            </h1>
            <p
              class={css({
                mx: "auto",
                textWrap: "balance",
                textAlign: "center",
                fontSize: "xl",
                color: "fg.muted",
                md: { fontSize: "2lx" },
              })}
            >
              I'm a developer who is currently focused on web projects
            </p>
          </div>
          <div
            class={css({
              display: "flex",
              flexDir: "column",
              gap: 2,
              sm: { flexDir: "row", gap: 4 },
            })}
          >
            <a href="#projects" class={button()}>
              <Icon name="arrow-down" />
              Projects
            </a>
            <a href="https://github.com/Curetix" class={button()}>
              <Icon name="logos/github" />
              GitHub
            </a>
            <a href="mailto:contact@curetix.eu" class={button()}>
              <Icon name="envelope" />
              Contact
            </a>
          </div>
        </div>
      </div>
    </section>

    <section
      id="projects"
      class={css({
        mx: "auto",
        display: "flex",
        flexDir: "column",
        gap: 5,
        p: { base: 5, md: 10 },
      })}
    >
      <h2 class={css({ textAlign: "center", fontSize: "4xl" })}>Projects</h2>
      <div
        class={css({
          display: "grid",
          gap: 3,
          gridTemplateColumns: {
            base: "repeat(1, minmax(0, 1fr))",
            md: "repeat(2, minmax(0, 1fr))",
            xl: "repeat(3, minmax(0, 1fr))",
          },
        })}
      >
        {projects.map((project) => <ProjectCard {...project} />)}
      </div>
    </section>

    <footer
      class={css({
        p: 6,
        mx: "auto",
      })}
    >
      <p class={css({ color: "fg.muted" })}>
        Â© Curetix {new Date().getFullYear()}. All rights reserved.{" "}
        <a class={link()} href="mailto:contact@curetix.eu">
          contact@curetix.eu
        </a>
      </p>
    </footer>
  </main>
</Layout>
